<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    tools:context=".UI.quiz.ResultActivity">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Tes Ishihara"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue_dark"
                android:layout_marginBottom="16dp"/>
            <!-- Score Container -->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="@drawable/score_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/textScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skor"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/yellow"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <!-- 3 Data Skor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- Baris 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/labelNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Normal"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/valueNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Baris 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/labelDeuteranopia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Deuteranopia"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/valueDeuteranopia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Baris 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/labelProtanopia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Protanopia"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/valueProtanopia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Classification Container -->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="@drawable/result_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/textClassificationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Klasifikasi"
                    android:textColor="@color/yellow"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textClassification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/ic_circle"
                android:padding="10dp"
                android:src="@drawable/ic_home"
                app:tint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMenu"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="40dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Menu Utama"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="@color/mainColor"
                app:cornerRadius="27dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
